---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Boxing Timer Champ">
	<main class="max-w-3xl mx-auto px-4 py-8">
		<div class="text-center">
			<div class="space-y-4 mb-8">
				<div class="text-9xl font-bold text-red-500 mb-4">404</div>
				<p class="text-2xl text-primary-100">Page Not Found</p>
				<p class="text-primary-200 max-w-2xl mx-auto">
					We couldn't find the page you're looking for.
				</p>
			</div>
			<a href="/" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-100 bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
				Go Home
			</a>
		</div>
	</main>
</Layout>
