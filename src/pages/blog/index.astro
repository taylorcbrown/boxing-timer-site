import Layout from '../../layouts/Layout.astro';

// Define our blog post type
interface BlogPost {
  url: string;
  title: string;
  description: string;
  publishDate: string;
  heroImage: string;
  alt: string;
  isDraft?: boolean;
}

// Type for the raw Astro file import
interface AstroFile {
  file: string;
  frontmatter: Partial<BlogPost>;
}

// Get all blog post files
const blogEntries = import.meta.glob<{ frontmatter: Partial<BlogPost> }>('./*.astro');
const allPosts = await Promise.all(
  Object.entries(blogEntries).map(async ([path, importFunc]) => {
    const post = await importFunc();
    return { file: path, frontmatter: post.frontmatter } as AstroFile;
  })
);

// For debugging - log what we're finding
console.log(`Found ${allPosts.length} total posts`);

// Process posts to extract frontmatter and URL
const processedPosts: BlogPost[] = allPosts
  .filter((post: AstroFile) => {
    // Skip this index page
    const fileName = post.file.split('/').pop();
    if (fileName === 'index.astro') {
      console.log(`Skipping index page: ${post.file}`);
      return false;
    }
    return true;
  })
  .map((post: AstroFile): BlogPost | null => {
    try {
      // Log the post structure for debugging
      console.log(`Processing post: ${post.file}`);
      
      // Get the URL path (remove .astro extension and add to /blog/)
      const slug = post.file.split('/').pop()?.replace(/\.astro$/, '') || '';
      const url = `/blog/${slug}`;
      
      // Access frontmatter directly
      const frontmatter = post.frontmatter || {};
      console.log('Frontmatter keys:', Object.keys(frontmatter));
      
      // Create the processed post with frontmatter data
      const processedPost: BlogPost = {
        url,
        title: frontmatter.title || 'Untitled Post',
        description: frontmatter.description || '',
        publishDate: frontmatter.publishDate as string || new Date().toISOString(),
        heroImage: frontmatter.heroImage as string || '',
        alt: frontmatter.alt as string || '',
        isDraft: frontmatter.isDraft
      };
      
      console.log(`Processed post: ${processedPost.title}, date: ${processedPost.publishDate}`);
      return processedPost;
    } catch (error) {
      console.error(`Error processing post ${post.file}:`, error);
      return null;
    }
  })
  .filter((post: BlogPost | null): post is BlogPost => {
    // Filter out any null posts (from failed processing)
    if (!post) return false;
    
    // Skip drafts
    if (post.isDraft) {
      console.log(`Skipping draft: ${post.title}`);
      return false;
    }
    
    // Skip future posts
    const postDate = new Date(post.publishDate);
    const currentDate = new Date();
    if (postDate > currentDate) {
      console.log(`Skipping future post: ${post.title}, date: ${postDate.toISOString()}`);
      return false;
    }
    
    return true;
  })
  .sort((a: BlogPost, b: BlogPost) => {
    const dateA = new Date(a.publishDate).valueOf();
    const dateB = new Date(b.publishDate).valueOf();
    console.log(`Sorting: ${a.title} (${a.publishDate}) vs ${b.title} (${b.publishDate})`);
    console.log(`Dates: ${dateA} vs ${dateB}, diff: ${dateB - dateA}`);
    return dateB - dateA; // Newest first
  });

console.log('Final post order:');
processedPosts.forEach((post, index) => {
  console.log(`${index + 1}. ${post.title} - ${post.publishDate}`);
});
console.log(`Found ${processedPosts.length} published posts`);
---

<Layout 
  title="Blog | Boxing Timer Champ" 
  description="Latest news, tips, and updates about Boxing Timer Champ - the best boxing round timer app for serious training."
  breadcrumbs={[{ label: 'Blog', href: '/blog' }]}
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Boxing Timer Champ Blog</h1>
      
      <p class="text-xl text-elegant-text-secondary max-w-3xl mx-auto">
        Stay up to date with the latest news, features, and tips for Boxing Timer Champ.
      </p>
    </header>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-16">
      {processedPosts.length === 0 ? (
        <div class="text-center py-12 col-span-2">
          <p class="text-gray-400 text-lg">No blog posts found. Check back soon!</p>
        </div>
      ) : (
        processedPosts.map(post => {
          const publishDate = post.publishDate 
            ? new Date(post.publishDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })
            : 'No date';
          
          return (
            <article class="bg-elegant-card-primary rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-[1.01] hover:shadow-xl h-full flex flex-col">
              {post.heroImage && (
                <a href={post.url} class="block">
                  <div class="relative pb-[56.25%] w-full overflow-hidden">
                    <img 
                      src={post.heroImage} 
                      alt={post.alt || `Featured image for ${post.title}`}
                      class="absolute inset-0 w-full h-full object-cover object-center"
                      width="1600"
                      height="900"
                      loading="lazy"
                    />
                  </div>
                </a>
              )}
              
              <div class="p-6 flex-grow flex flex-col">
                <h2 class="text-2xl font-bold mb-3">
                  <a href={post.url} class="hover:text-green-500 transition-colors">
                    {post.title}
                  </a>
                </h2>
                
                <div class="flex items-center text-gray-400 mb-4">
                  <span class="flex items-center">
                    <i class="fas fa-calendar-alt mr-2"></i>
                    <time datetime={post.publishDate || ''} class="text-sm">
                      {publishDate}
                    </time>
                  </span>
                </div>
                
                <p class="text-elegant-text-secondary mb-4 flex-grow">
                  {post.description}
                </p>
                
                <a href={post.url} class="inline-flex items-center text-green-500 hover:text-green-400 hover:underline mt-2">
                  Read more
                  <i class="fas fa-arrow-right ml-2 text-xs"></i>
                </a>
              </div>
            </article>
          );
        })
      )}
    </div>
    
    <section class="bg-elegant-card-secondary rounded-xl p-8 shadow-lg mb-12">
      <h2 class="text-2xl font-bold mb-4">About The Blog</h2>
      
      <div class="text-elegant-text-secondary space-y-4">
        <p>
          This blog is a resource for Boxing Timer Champ and boxing training topics. Here's what you can expect to find:
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div class="bg-elegant-card-primary p-5 rounded-lg">
            <h3 class="text-xl font-semibold mb-2 flex items-center">
              <i class="fas fa-bullhorn mr-3 text-green-500"></i>
              Product Updates
            </h3>
            <p class="text-elegant-text-tertiary">
              Stay informed about new features, version releases, and improvements to the Boxing Timer Champ app.
            </p>
          </div>
          
          <div class="bg-elegant-card-primary p-5 rounded-lg">
            <h3 class="text-xl font-semibold mb-2 flex items-center">
              <i class="fas fa-lightbulb mr-3 text-green-500"></i>
              Training Tips
            </h3>
            <p class="text-elegant-text-tertiary">
              Discover effective training techniques, workout structures, and how to maximize your boxing sessions.
            </p>
          </div>
          
          <div class="bg-elegant-card-primary p-5 rounded-lg">
            <h3 class="text-xl font-semibold mb-2 flex items-center">
              <i class="fas fa-question-circle mr-3 text-green-500"></i>
              How-To Guides
            </h3>
            <p class="text-elegant-text-tertiary">
              Learn how to get the most out of Boxing Timer Champ with detailed tutorials and usage guides.
            </p>
          </div>
          
          <div class="bg-elegant-card-primary p-5 rounded-lg">
            <h3 class="text-xl font-semibold mb-2 flex items-center">
              <i class="fas fa-history mr-3 text-green-500"></i>
              Boxing Insights
            </h3>
            <p class="text-elegant-text-tertiary">
              Occasional articles on boxing history, training evolution, and the science behind effective workouts.
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <div class="bg-gradient-to-r from-applegreen-gradientFrom to-applegreen-gradientTo rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold mb-4">Get Boxing Timer Champ</h2>
      <a href="https://apps.apple.com/us/app/boxing-timer-champ/id6744783909" target="_blank" rel="noopener noreferrer" class="inline-block bg-elegant-primary hover:bg-elegant-secondary text-white font-bold py-3 px-6 rounded-lg transition-colors">
        Download on the App Store
      </a>
    </div>
  </div>

  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Blog',
    'name': 'Boxing Timer Champ Blog',
    'description': 'Latest news, tips, and updates about Boxing Timer Champ - the best boxing round timer app for serious training.',
    'url': Astro.url.href,
    'publisher': {
      '@type': 'Organization',
      'name': 'Boxing Timer Champ',
      'logo': {
        '@type': 'ImageObject',
        'url': `${Astro.site?.origin || 'https://boxingtimerchamp.com'}/favicon.png`
      }
    }
  })}>
  </script>
</Layout>
