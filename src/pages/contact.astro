---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

---

<Layout title="Contact - Boxing Timer Champ">
  <main class="w-full max-w-4xl mx-auto px-4 md:px-8 py-12">
    <div class="space-y-6">
      <h1 class="text-4xl font-bold text-green-500">Contact</h1>
      <p class="text-elegant-text-secondary text-lg">Questions about the app? Need help or have a feature request? Use the form below to get in touch.</p>
      
      <ContactForm />
    </div>
  </main>
</Layout>
