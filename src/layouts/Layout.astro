---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
const isLocalhost = Astro.url.hostname === 'localhost' || Astro.url.hostname === '127.0.0.1';
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title || "Boxing Timer Champ"}</title>
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
		
		<!-- Google Tag Manager -->
		<script>
		  (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		  })(window,document,'script','dataLayer','GTM-TX83T7D9');
		</script>
		<!-- End Google Tag Manager -->
		
		<!-- CookieYes Banner - Only on production -->
		{!isLocalhost && (
			<script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/746be0fcd3798bc5bf52a785/script.js"></script>
		)}
		
		<style>
		  /* Sticky footer styles */
		  html {
		    height: 100%;
		  }

		  body {
		    min-height: 100%;
		    display: flex;
		    flex-direction: column;
		    background-color: #121212;
		    color: #f1f5f9;
		  }

		  .content-wrapper {
		    flex: 1;
		    padding-bottom: 2rem;
		  }

		  /* Navigation styles */
		  .nav-link {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Button styles */
		  .btn-primary {
		    @apply bg-red-500 text-white hover:bg-red-600;
		  }

		  /* Card styles */
		  .card {
		    @apply bg-elegant-card-primary text-white;
		  }

		  /* Form styles */
		  .form-input {
		    @apply bg-elegant-secondary text-white;
		  }

		  /* Heading styles */
		  h1, h2, h3, h4, h5, h6 {
		    @apply text-white;
		  }

		  /* Link styles */
		  a {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Border styles */
		  .border {
		    @apply border-elegant-border-primary;
		  }
		</style>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
		  <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TX83T7D9"
		  height="0" width="0" style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<div class="content-wrapper">
		  <Navigation />
		  <slot />
		</div>
		<Footer />
	</body>
</html>