---
import Navigation from '../components/Navigation.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title || "Boxing Timer Champ"}</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<footer class="bg-gray-50 dark:bg-gray-900 py-12">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center md:text-left">
						<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Boxing Timer Champ</h2>
						<p class="text-gray-600 dark:text-gray-400">
							The ultimate boxing round timer for serious training.
						</p>
					</div>
					<div class="text-center md:text-left">
						<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Links</h3>
						<ul class="space-y-2 text-gray-600 dark:text-gray-400">
							<li><a href="/" class="hover:text-indigo-600">Home</a></li>
							<li><a href="/about" class="hover:text-indigo-600">About</a></li>
							<li><a href="/contact" class="hover:text-indigo-600">Contact</a></li>
						</ul>
					</div>
					<div class="text-center md:text-left">
						<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Legal</h3>
						<ul class="space-y-2 text-gray-600 dark:text-gray-400">
							<li><a href="/privacy" class="hover:text-indigo-600">Privacy Policy</a></li>
							<li><a href="/terms" class="hover:text-indigo-600">Terms of Service</a></li>
						</ul>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-gray-500 dark:text-gray-400">
					<p>&copy; {new Date().getFullYear()} Boxing Timer Champ. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
