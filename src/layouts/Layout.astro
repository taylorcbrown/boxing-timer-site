---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title || "Boxing Timer Champ"}</title>
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
		<!-- Start cookieyes banner -->
		<script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/746be0fcd3798bc5bf52a785/script.js"></script>
		<script>
		  // Simple check to verify script loading
		  console.log('CookieYes script loaded');
		</script>
		<!-- End cookieyes banner -->
		<style>
		  /* Sticky footer styles */
		  html {
		    height: 100%;
		  }

		  body {
		    min-height: 100%;
		    display: flex;
		    flex-direction: column;
		    background-color: #121212;
		    color: #f1f5f9;
		  }

		  .content-wrapper {
		    flex: 1;
		    padding-bottom: 2rem;
		  }

		  /* Navigation styles */
		  .nav-link {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Button styles */
		  .btn-primary {
		    @apply bg-red-500 text-white hover:bg-red-600;
		  }

		  /* Card styles */
		  .card {
		    @apply bg-elegant-card-primary text-white;
		  }

		  /* Form styles */
		  .form-input {
		    @apply bg-elegant-secondary text-white;
		  }

		  /* Heading styles */
		  h1, h2, h3, h4, h5, h6 {
		    @apply text-white;
		  }

		  /* Link styles */
		  a {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Border styles */
		  .border {
		    @apply border-elegant-border-primary;
		  }
		</style>
	</head>
	<body>
		<div class="content-wrapper">
		  <Navigation />
		  <slot />
		</div>
		<Footer />
	</body>
</html>