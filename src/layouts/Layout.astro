---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import CookieConsentConfig from '../components/CookieConsentConfig.astro';
import { formatTitle } from '../utils/seo';
import '../styles/scss/main.scss';

const { 
  title, 
  description = "The best boxing round timer for serious training. Customize your workout with adjustable rounds, rest periods, and alerts.", 
  breadcrumbs, 
  showBreadcrumbs = true,
  seo = {}
} = Astro.props;

const isLocalhost = Astro.url.hostname === 'localhost' || Astro.url.hostname === '127.0.0.1';
const isHomepage = Astro.url.pathname === '/' || Astro.url.pathname === '/index.html';

// Format the title with site name consistently
const formattedTitle = formatTitle(title, { 
  isHomepage,
  ...seo
});
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<title>{formattedTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" type="image/png" href="/favicon.png" />
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Organization',
        name: 'Boxing Timer Champ',
        url: 'https://boxingtimerchamp.com',
        logo: 'https://boxingtimerchamp.com/favicon.png',
        sameAs: [
          'https://boxingtimerchamp.com',
          'https://apps.apple.com/us/app/boxing-timer-champ/id6744783909'
        ]
      })}
    </script>
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'MobileApplication',
        name: 'Boxing Timer Champ',
        operatingSystem: 'iOS',
        applicationCategory: 'HealthApplication',
        description: 'The best boxing round timer for serious training. Customizable rounds, rest, and alerts for fighters and coaches.',
        offers: {
          '@type': 'Offer',
          price: 0,
          priceCurrency: 'USD',
          availability: 'https://schema.org/InStock'
        },
        aggregateRating: {
          '@type': 'AggregateRating',
          ratingValue: '4.8',
          reviewCount: '1200'
        },
        url: 'https://apps.apple.com/us/app/boxing-timer-champ/id6744783909',
        installUrl: 'https://apps.apple.com/us/app/boxing-timer-champ/id6744783909',
        publisher: {
          '@type': 'Organization',
          name: 'Boxing Timer Champ'
        }
      })}
    </script>
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: 'Boxing Timer Champ',
        url: 'https://boxingtimerchamp.com',
        potentialAction: {
          '@type': 'SearchAction',
          target: 'https://boxingtimerchamp.com/search?q={search_term_string}',
          'query-input': 'required name=search_term_string'
        }
      })}
    </script>
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
		
		<!-- Google Tag Manager with Consent Mode -->
		<script is:inline>
		  // Initialize dataLayer
		  window.dataLayer = window.dataLayer || [];
		  
		  // GTM with Consent Mode (follows Google's recommended implementation)
		  (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		  })(window,document,'script','dataLayer','GTM-TX83T7D9');
		</script>
		<!-- End Google Tag Manager -->
		
		<!-- CookieYes Banner with advanced configuration - Only on production -->
		{!isLocalhost && (
			<script is:inline>
				// CookieYes configuration
				window.cookieyes = window.cookieyes || {};
				window.cookieyes.settings = {
					// Configure which cookies require explicit consent
					'consentBanner': {
						'show_on_load': true,
						'auto_accept': false,
						'default_consent': 'none' // Default to opt-in for GDPR compliance
					}
				};
			</script>
			<script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/746be0fcd3798bc5bf52a785/script.js"></script>
		)}
		
		<!-- Include Cookie Consent Configuration -->
		<CookieConsentConfig />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
		  <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TX83T7D9"
		  height="0" width="0" style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<div class="content-wrapper">
		  <Navigation />
		  {showBreadcrumbs && !isHomepage && breadcrumbs && (
		    <Breadcrumbs breadcrumbs={breadcrumbs.slice(0, -1)} currentPage={breadcrumbs[breadcrumbs.length - 1]?.label || title} />
		  )}
		  <slot />
		</div>
		<Footer />
	</body>
</html>