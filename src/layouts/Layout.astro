---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title || "Boxing Timer Champ"}</title>
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
		
		<!-- CookieYes Banner - Load First -->
		<script id="cookieyes" type="text/javascript" src="https://cdn-cookieyes.com/client_data/746be0fcd3798bc5bf52a785/script.js"></script>
		
		<!-- Deferred GA4 Script - Only loads after consent -->
		<script>
			window.GA_MEASUREMENT_ID = 'G-M6462KMKPS';
			window.gaLoaded = false;
		</script>
		
		<style>
		  /* Sticky footer styles */
		  html {
		    height: 100%;
		  }

		  body {
		    min-height: 100%;
		    display: flex;
		    flex-direction: column;
		    background-color: #121212;
		    color: #f1f5f9;
		  }

		  .content-wrapper {
		    flex: 1;
		    padding-bottom: 2rem;
		  }

		  /* Navigation styles */
		  .nav-link {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Button styles */
		  .btn-primary {
		    @apply bg-red-500 text-white hover:bg-red-600;
		  }

		  /* Card styles */
		  .card {
		    @apply bg-elegant-card-primary text-white;
		  }

		  /* Form styles */
		  .form-input {
		    @apply bg-elegant-secondary text-white;
		  }

		  /* Heading styles */
		  h1, h2, h3, h4, h5, h6 {
		    @apply text-white;
		  }

		  /* Link styles */
		  a {
		    @apply text-gray-300 hover:text-white;
		  }

		  /* Border styles */
		  .border {
		    @apply border-elegant-border-primary;
		  }
		</style>
	</head>
	<body>
		<div class="content-wrapper">
		  <Navigation />
		  <slot />
		</div>
		<Footer />
		
		<script>
		  // GA4 Integration with CookieYes
		  
		  // 1. Function to dynamically load GA script
		  function loadGAScript() {
		    if (window.gaLoaded) return;
		    
		    // Create gtag script
		    const gtagScript = document.createElement('script');
		    gtagScript.src = `https://www.googletagmanager.com/gtag/js?id=${window.GA_MEASUREMENT_ID}`;
		    gtagScript.async = true;
		    document.head.appendChild(gtagScript);
		    
		    // Initialize dataLayer
		    window.dataLayer = window.dataLayer || [];
		    function gtag() { dataLayer.push(arguments); }
		    gtag('js', new Date());
		    gtag('config', window.GA_MEASUREMENT_ID);
		    
		    window.gaLoaded = true;
		  }
		  
		  // 2. Function to initialize CookieYes event listeners
		  function initCookieConsent() {
		    // If CookieYes isn't loaded yet, add a listener for when it's ready
		    if (typeof window.cookieyes === 'undefined') {
		      document.addEventListener('cookieyes_consent_update', handleConsentUpdate);
		      return;
		    }
		    
		    // Handle existing consent state
		    if (window.cookieyes.consent.get('analytics')) {
		      loadGAScript();
		    }
		    
		    // Listen for future consent changes
		    window.cookieyes.consent.on('change', function() {
		      if (window.cookieyes.consent.get('analytics')) {
		        loadGAScript();
		      }
		    });
		  }
		  
		  // 3. Handler for cookieyes consent events
		  function handleConsentUpdate(event) {
		    const analyticsConsent = event.detail && event.detail.analytics;
		    if (analyticsConsent) {
		      loadGAScript();
		    }
		  }
		  
		  // 4. Initialize when DOM is ready
		  document.addEventListener('DOMContentLoaded', function() {
		    // Wait a reasonable time for CookieYes to initialize
		    setTimeout(initCookieConsent, 500);
		  });
		  
		  // 5. Fallback initialization - if CookieYes takes too long or fails
		  window.addEventListener('load', function() {
		    setTimeout(function() {
		      if (typeof window.cookieyes !== 'undefined' && window.cookieyes.consent.get('analytics')) {
		        loadGAScript();
		      }
		    }, 2000);
		  });
		</script>
	</body>
</html>